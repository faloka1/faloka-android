<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_grid_search"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/img_search_product"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_svg_unkown" />

    <TextView
        android:id="@+id/tv_search_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.025"
        android:text="Produk “Blouse” tidak ditemukan"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_search_product"
        app:layout_constraintTop_toTopOf="@+id/img_search_product" />

    <TextView
        android:id="@+id/tv_search_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/khula"
        android:letterSpacing="0.025"
        android:text="Mungkin produk belum ada, yuk cari kata lain"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_search_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_product_name" />
</androidx.constraintlayout.widget.ConstraintLayout>