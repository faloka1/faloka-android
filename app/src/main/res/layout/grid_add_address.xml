<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E8F8F9"
    android:paddingHorizontal="20dp"
    android:paddingVertical="17dp">

    <TextView
        android:id="@+id/tv_title_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_svg_address"
        android:drawablePadding="8dp"
        android:fontFamily="@font/lato_black"
        android:gravity="center"
        android:letterSpacing="0.015"
        android:text="Alamat Pengiriman"
        android:textColor="@color/netral_900"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_delivery_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/khula"
        android:letterSpacing="0.025"
        android:text="Kamu belum memiliki alamat untuk pengiriman"
        android:textColor="@color/netral_500"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_delivery" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#E8F8F9"
        android:fontFamily="@font/khula_semibold"
        android:letterSpacing="0.125"
        android:text="Buat alamat"
        android:textColor="@color/secondary_dark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_delivery_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_phone_number"></Button>

    style="?android:attr/borderlessButtonStyle"
</androidx.constraintlayout.widget.ConstraintLayout>
