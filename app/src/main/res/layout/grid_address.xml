<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E8F8F9"
    android:paddingHorizontal="20dp"
    android:paddingVertical="17dp">

    <TextView
        android:id="@+id/tv_title_delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_svg_account"
        android:drawablePadding="8dp"
        android:fontFamily="@font/lato_black"
        android:letterSpacing="0.015"
        android:text="Alamat Pengiriman"
        android:textColor="@color/netral_900"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_delivery_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.025"
        android:text="Ela"
        android:textColor="@color/netral_900"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_delivery_complete_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/khula"
        android:letterSpacing="0.025"
        android:text="Gununganyar Tengah Gg 2A/2"
        android:textColor="@color/netral_900"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_delivery_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_complete_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/khula"
        android:letterSpacing="0.025"
        android:text="Jawa Timur, Surabaya, Gununganyar"
        android:textColor="@color/netral_900"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_delivery_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/khula"
        android:letterSpacing="0.025"
        android:text="0811878727187"
        android:textColor="@color/netral_500"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_edit"
        app:layout_constraintEnd_toEndOf="@+id/tv_delivery_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="#E8F8F9"
        android:fontFamily="@font/khula_semibold"
        android:letterSpacing="0.125"
        android:text="Edit"
        android:textColor="@color/secondary_green_dark"
        android:textSize="14sp"></Button>

    <Button
        android:id="@+id/btn_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:background="#E8F8F9"
        android:fontFamily="@font/khula_semibold"
        android:letterSpacing="0.125"
        android:text="Delete"
        android:textColor="@color/secondary_green_dark"
        android:textSize="14sp"></Button>
    style="?android:attr/borderlessButtonStyle"
</androidx.constraintlayout.widget.ConstraintLayout>
