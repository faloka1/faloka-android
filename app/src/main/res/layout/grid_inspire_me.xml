<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="28dp"
    android:background="@drawable/card_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/inspire_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_profile"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerPadding="11dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/inspire_photo_profile"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/img_profile" />

                <Space
                    android:layout_width="11dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/inspire_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/TextAppearance.App.Subtitle1"
                    android:gravity="center_vertical"
                    android:text="Kookie" />
            </LinearLayout>

            <TextView
                android:id="@+id/inspire_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.App.Body1"
                android:text="Miror selfie check! lagi seneng banget pakek baju ini" />

            <Button
                android:id="@+id/inspire_button_relate_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/primary_dark"
                android:fontFamily="@font/khula"
                android:letterSpacing="0.105"
                android:text="Lihat relate outfit"
                android:textAllCaps="false"
                android:textColor="@color/netral_100"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>