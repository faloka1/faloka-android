<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="157dp"
    android:layout_height="229dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="0dp"
    android:background="@color/netral_black_100"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/border_frame_list_product"
        android:layout_height="match_parent">
        <ImageView

            android:id="@+id/img_item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surabaya - Brand"
            android:textSize="16sp"
            android:layout_marginTop="12.63dp"
            android:layout_marginStart="9dp"
            android:letterSpacing="0.015"
            android:textColor="@color/netral_black_900"
            android:fontFamily="@font/lato"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/khula"
            android:letterSpacing="0.015"
            android:text="Baju bagus"
            android:textColor="@color/netral_black_600"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/lato_bold"
            android:letterSpacing="0.015"
            android:text="Rp.80.000"
            android:textColor="@color/netral_black_900"
            android:textSize="17sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>