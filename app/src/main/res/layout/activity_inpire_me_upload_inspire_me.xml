<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InspireMe.InspireMeUploadInspireMe">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Upload Outfit"
        app:titleTextColor="@color/netral_900" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:id="@+id/upload_inspire_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/upload_inspire_label_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.025"
                android:text="Gambar gaya outfit"
                android:textColor="@color/netral_900"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/upload_inspire_etImage"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/card_border"
                android:drawableStart="@drawable/ic_svg_outlined_add_photo"
                android:gravity="center"
                android:inputType="text"
                android:paddingHorizontal="80dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upload_inspire_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/upload_inspire_image"
            app:layout_constraintStart_toStartOf="@id/upload_inspire_image"
            app:layout_constraintTop_toBottomOf="@id/upload_inspire_image">

            <TextView
                android:id="@+id/upload_inspire_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.025"
                android:text="Judul Postingan"
                android:textColor="@color/netral_900"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/upload_inspire_etTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/card_border"
                android:text="ex:Outfit senja hari"
                android:textSize="14sp"
                android:letterSpacing="0.025"
                android:textColor="@color/netral_400"
                android:inputType="text"
                android:paddingHorizontal="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upload_inspire_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/upload_inspire_title"
            app:layout_constraintStart_toStartOf="@id/upload_inspire_title"
            app:layout_constraintTop_toBottomOf="@id/upload_inspire_title">

            <TextView
                android:id="@+id/upload_inspire_label_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.025"
                android:text="Caption"
                android:textColor="@color/netral_900"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/upload_inspire_etCaption"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/card_border"
                android:text="ex:Outfit senja hari"
                android:textSize="14sp"
                android:letterSpacing="0.025"
                android:textColor="@color/netral_400"
                android:inputType="textMultiLine"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upload_inspire_relateProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/upload_inspire_caption"
            app:layout_constraintStart_toStartOf="@id/upload_inspire_caption"
            app:layout_constraintTop_toBottomOf="@+id/upload_inspire_caption">

            <TextView
                android:id="@+id/upload_inspire_label_relateProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.025"
                android:text="Pilih produk yang sama"
                android:textColor="@color/netral_900"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/upload_inspire_etRelateProduct"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/card_border"
                android:drawableStart="@drawable/ic_svg_outlined_add_photo"
                android:inputType="text"
                android:padding="15dp" />

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            style="@style/ButtonPrimary"
            android:text= "Upload"
            app:layout_constraintEnd_toEndOf="@+id/upload_inspire_relateProduct"
            app:layout_constraintTop_toBottomOf="@+id/upload_inspire_relateProduct" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            style="@style/ButtonSecondary"
            android:text="Reset"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/upload_inspire_relateProduct"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>