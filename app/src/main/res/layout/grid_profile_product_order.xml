<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/round_corner_subcategory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_order_product"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="@+id/tv_order_brand"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_brand"
                app:srcCompat="@android:drawable/ic_dialog_alert"></ImageView>

            <TextView
                android:id="@+id/tv_order_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/lato"
                android:text="Brand"
                android:textColor="#000000"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/lato"
                android:text="None"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_order_product"
                app:layout_constraintStart_toEndOf="@+id/img_order_product"
                app:layout_constraintTop_toTopOf="@+id/img_order_product" />

            <LinearLayout
                android:id="@+id/linear_layout_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/tv_order_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_order_name">

                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/lato_bold"
                    android:text="Rp."
                    android:textColor="#DB317A"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/img_btn_detail_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_upload_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/black_faloka"
                android:fontFamily="@font/khula"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Upload Bukti Pembayaran"
                android:textAllCaps="false"
                android:textColor="@color/white_faloka"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/linear_layout_detail" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>