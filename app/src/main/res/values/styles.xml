<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/khula</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:letterSpacing">0.115</item>
    </style>
    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:letterSpacing">0.115</item>
    </style>
    <style name="RoundedTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tabs_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_layout_bg</item>
        <item name="tabSelectedTextColor">@color/primary_dark</item>
        <item name="tabTextColor">@color/white_faloka</item>
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/BlackButton</item>
        <item name="cornerRadius">0dp</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>
    <style name="BlackButton">
        <item name="color">?attr/colorPrimary</item>
    </style>
    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/khula_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:letterSpacing">0.115</item>
    </style>

    <style name="ButtonPopUp" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ButtonPopUpThemeOverlay</item>
        <item name="drawableRightCompat">@drawable/ic_svg_arrow_drop_down</item>
    </style>
    <style name="ButtonPopUpThemeOverlay">
        <item name="textAppearanceButton">@style/TextAppearance.App.Subtitle1</item>
    </style>








</resources>