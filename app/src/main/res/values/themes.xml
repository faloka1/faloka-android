<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Falokamobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/netral_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_green_light</item>
        <item name="colorSecondaryVariant">@color/secondary_green_dark</item>
        <item name="colorOnSecondary">@color/netral_900</item>

        <item name="background">@color/netral_100</item>
        <item name="colorOnBackground">@color/netral_900</item>

        <item name="colorSurface">@color/netral_100</item>
        <item name="colorOnSurface">@color/netral_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>
</resources>